#!/bin/bash

# Get the Python file name from the environment variable
py_file="$PYFILE"

# Generate the output filename
compiled_file="${py_file%.py}.pyc"

# Compile the Python script
python3 -m py_compile "$py_file"

# Print a message indicating the compilation process
echo "Compiling $py_file ..."

# Check if compilation was successful
if [ -f "$compiled_file" ]; then
    echo "Compilation successful. Output file: $compiled_file"
else
    echo "Compilation failed."
fi

